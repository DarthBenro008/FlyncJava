<resources>

    <!-- Base application theme (Dark) -->
    <style name="DarkAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:itemBackground">@color/light_gray</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorPrimary">@color/light_gray</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="appBackgroundPrimaryColor">@color/dark_gray</item>
        <item name="appBackgroundSecondaryColor">@color/light_gray</item>
        <item name="textColorPrimary">@color/white_gray</item>
        <item name="textColorSecondary">@color/white_gray</item>
        <item name="pieSecondaryColor">@color/light_gray</item>
        <item name="buttonTextColor">@color/white</item>
    </style>

    <style name="LightAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="appBackgroundPrimaryColor">@color/white</item>
        <item name="appBackgroundSecondaryColor">@color/white_gray</item>
        <item name="textColorPrimary">@color/black</item>
        <item name="textColorSecondary">@color/dark_gray</item>
        <item name="pieSecondaryColor">@color/white_gray</item>
        <item name="buttonTextColor">@color/white</item>
    </style>

    <style name="BlackAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:itemBackground">@color/dark_gray</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorPrimary">@color/dark_gray</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="appBackgroundPrimaryColor">@color/black</item>
        <item name="appBackgroundSecondaryColor">@color/dark_gray</item>
        <item name="textColorPrimary">@color/white</item>
        <item name="textColorSecondary">@color/white_gray</item>
        <item name="pieSecondaryColor">@color/light_gray</item>
        <item name="buttonTextColor">@color/white</item>
    </style>


</resources>